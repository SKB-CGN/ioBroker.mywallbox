{
  "name": "iobroker.mywallbox",
  "version": "1.3.0",
  "description": "Connect your My-Wallbox (e.g. Pulsar Plus) with ioBroker",
  "author": {
    "name": "SKB-CGN",
    "email": "info@skb-web.de"
  },
  "homepage": "https://github.com/SKB-CGN/ioBroker.mywallbox",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "wallbox",
    "pulsar",
    "pulsar plus"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:SKB-CGN/ioBroker.mywallbox.git"
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/eslint-config": "^1.0.0",
    "@iobroker/testing": "^5.0.4",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.14.1",
    "@types/proxyquire": "^1.3.30",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^3.2.9",
    "chai": "^4.5.0",
    "mocha": "^11.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^19.0.4",
    "sinon-chai": "^3.7.0",
    "typescript": "~5.7.3"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint -c eslint.config.mjs .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/SKB-CGN/ioBroker.mywallbox/issues"
  },
  "readmeFilename": "README.md"
}
